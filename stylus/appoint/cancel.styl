@import 'appointdetails.styl'
.result
	width 100%
	padding 10px
	box-sizing border-box
	background #FFF
	border-bottom 1px solid #DADADA
	.result_one,.result_re
		height 18px
		margin-bottom 8px
		position relative
		.result_kuang
			width 16px
			height 16px
			border 1px solid #DADADA
			border-radius 2px
			float left
		.result_yes
			width 14px
			height 14px
			background url('../../img/reservedetails/content_list_icon_right@2x.png') no-repeat center;
			background-size 12px 10px
			position absolute
			top 2px
			left 2px
			display none
		.result_wor
			font-size 14px
			color #323232
			float left
			line-height 18px
			margin-left 10px
	textarea
		width 100%
		height 72px
		border-radius 2px
		border 1px solid #E8E8EB
		background #E8E8EB
		color #C5C5C6
		padding 6px
		box-sizing border-box
		font-size 12px
		display none
.wipe
	position absolute
	top 0px
	left 0px
	width 100%
	height 163%
	background rgba(50,50,50,0.5)
	display none
	z-index 2
	.wipe_sm
		position absolute
		top 25%
		left 15%
		width 70%
		height 107px
		border-radius 10px
		background #FFF
		text-align center
		.wipe_sm_p
			font-size 12px
			width 100%
			height 63px
			line-height 63px
			border-bottom 1px solid #d6d7dc
			display inline-block
			color #494949
		.cancel
			width 50%
			height 43px
			text-align center
			line-height 44px
			display inline-block
			float left
			color #727272
		.confirm
			width 49%
			color #EA5404
			border-left 1px solid #d6d7dc
		.wipe_one
			width 100%
			height 43px
			text-align center
			line-height 43px
			color #EB5C18
			display inline-block
