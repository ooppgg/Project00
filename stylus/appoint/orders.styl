@import "appointdetails.styl"
.appo_state
	width 100%
	height 44px
	padding-left 10px
	box-sizing border-box
	background #FFF
	.state_bar
		width 100%
		height 44px
		padding 5px 10px 5px 0px
		box-sizing border-box
		border-bottom 1px solid #E3E3E8
		.state_time
			width 10%
			text-align center
			color #323232
			line-height 16px
			font-size 12px
			float left
		.state_sta
			line-height 34px
			font-size 14px
			color #323232
			display inline-block
			float right
.state_line
	padding 0px
	border-bottom 1px solid #E3E3E8
	.state_mar
		border 0
		padding-left 10px
.order_btn
	width 100%
	height 49px
	position absolute
	bottom 0px
	background #FFF
	border-top 1px solid #E3E3E8
	.btn_one
		width 32%
		line-height 49px
		display inline-block
		color #EA5404
		text-align center
		border-right 1px solid #E3E3E8
	.btn_line
		border 0
			
		
			