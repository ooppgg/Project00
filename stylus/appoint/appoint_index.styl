@import "../I/Ilogin.styl"
.appo_index_bar
	width 94%
	min-height 106px
	border-bottom 1px solid #E3E3E8
	padding 3%
	padding-bottom 0px
	background #FFF
	margin-top 7px
	.ind_bar_pic
		width 27%
		height 71px
		border-radius 3px
		overflow hidden
		float left
		background url("../../img/reserve/content_img@2x.png") no-repeat
		background-size cover
		margin-right 10px
	.ind_bar_wor
		float left
		width 67%
		.ind_wor_name
			width 100%
			height 16px
			.wor_name
				font-size 14px
				line-height 16px
				color #646464
				float left
			.wor_time
				float right 
				font-size 12px
				color #B4B4B4
				position relative
				&:before
					content ''
					position absolute
					top 2px
					left -15px
					width 10px
					height 10px
					background url("../../img/reserve/content_icon@2x.png")
					background-size cover
		.wor_content
			font-size 14px
			text-indent 1.5em
			color #646464
			line-height 18px
			display inline-block
			.content_col
				color #323232
		.wor_appo_time
			font-size 12px
			color #FF8A00
			line-height 16px
	.wor_btn
		width 54px
		height 22px
		border-radius 3px
		text-align center
		line-height 22px
		font-size 12px
		color #FFF
		display inline-block
		background #EA5404
		margin-right 5px
		float right
	.wor_state
		font-size 12px
		color #323232
		float right 
		margin-right 15px
		margin-top 5px
		display inline-block
@media all and (min-width:590px)
	.appo_index_bar
		height 105px
@media all and (max-width:350px)
	.appo_index_bar
		height 122px

.footer
	.footer_di
		.footer_wor_2
			background url("../../img/footer_nav/bottom_press_icon03@2x.png") no-repeat 10px 6px
			background-size 50%
		.footer_wor_4
			background url("../../img/footer_nav/bottom_nor_icon01@2x.png") no-repeat 10px 6px
			background-size 50%