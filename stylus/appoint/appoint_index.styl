@import "../I/I.styl"
.appoint_all
	display none
.appo_index_bar
	width 100%
	overflow hidden
	height 125px
	border-bottom 1px solid #E3E3E8
	background #FFF
	margin-top 7px
	.appo_index_bar_width
		transition 1s all
		padding 3%		
		width 100%
		position relative
		height 100%
		.delete
			position absolute
			text-align center
			line-height 120px
			right -20%
			top 0
			width 20%
			background #FF3B30
			color #fff
			bottom 0
		.ind_bar_pic
			width 27%
			height 71px
			border-radius 3px
			overflow hidden
			float left
			background url("../../img/reserve/content_img@2x.png") no-repeat
			background-size cover
			margin-right 10px
		.ind_bar_wor
			float left
			width 60%
			.ind_wor_name
				width 100%
				height 16px
				.wor_name
					font-size 14px
					line-height 16px
					color #646464
					float left
				.wor_time
					float right 
					font-size 12px
					color #B4B4B4
					position relative
					&:before
						content ''
						position absolute
						top 2px
						left -15px
						width 10px
						height 10px
						background url("../../img/reserve/content_icon@2x.png")
						background-size cover
			.wor_content
				font-size 14px
				text-indent 1.5em
				color #646464
				line-height 18px
				display inline-block
				.content_col
					color #323232
			.wor_appo_time
				font-size 12px
				color #FF8A00
				line-height 16px
		.wor_btn
			width 54px
			height 22px
			border-radius 3px
			text-align center
			line-height 22px
			font-size 12px
			color #FFF
			display inline-block
			background #EA5404
			margin-right 37px
			float right
		.wor_state
			font-size 12px
			color #323232
			float right 
			margin-right 40px
			margin-top 5px
			display inline-block
		.wor_state1
			display none
.footer
	.footer_wor_2
		background url("../../img/footer_nav/bottom_press_icon03@2x.png") no-repeat center 5px
		background-size 24px 24px
	.footer_wor_4
		background url("../../img/footer_nav/bottom_nor_icon01@2x.png") no-repeat center 5px
		background-size 24px 24px