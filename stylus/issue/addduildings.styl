@import "../appoint/appointdetails.styl"
body
	font-family "微软雅黑"
input
	width 96%
	height 39px
	border 1px solid #E3E3E8
	margin-left 2%
	margin-top 10px
	border-radius 4px
	padding-left 10px
	box-sizing border-box
	font-size 12px
	color #B7B7B7
	font-family "微软雅黑"
	outline none
.add_btn
	display inline-block
	width 96%
	height 42px
	border 1px solid #E3E3E8
	margin-left 2%
	margin-top 15px
	border-radius 4px
	color #EB5C18
	background #FFF
	line-height 42px
	text-align center
.wipe
	position absolute
	top 0px
	left 0px
	width 100%
	height 100%
	background rgba(50,50,50,0.5)
	display none
	z-index 2
	.wipe_sm
		position absolute
		top 50%
		left 15%
		margin-top -53px
		width 70%
		height 107px
		border-radius 10px
		background #FFF
		text-align center
		.wipe_sm_p
			font-size 12px
			width 100%
			height 63px
			line-height 63px
			border-bottom 1px solid #d6d7dc
			display inline-block
			color #494949
		.cancel
			width 50%
			height 43px
			text-align center
			line-height 44px
			display inline-block
			float left
			color #727272
		.confirm
			width 49%
			color #EA5404
			border-left 1px solid #d6d7dc
		.wipe_one
			width 100%
			height 43px
			text-align center
			line-height 43px
			color #EB5C18
			display inline-block