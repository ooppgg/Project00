@import "editdata.styl"
.setting_on
	height 48px
	width 100%
	background #FFF
	border-bottom 1px solid #d6d7dc
	margin-top 10px
	line-height 48px
	padding-left 10px
	padding-right 10px
	box-sizing border-box
	color #323232
	.setting_hua
		width 50px
		height 31px
		background #EA5404
		border-radius 15px
		float right 
		margin-top 9px
		position relative
		.se_hua_sm
			width 31px
			height 31px
			background #FFF
			border-radius 50%
			position absolute
			top 0px
			left 0px
.setting_on_1
	position relative
	.set_num
		color #b4b4b4
		font-size 12px
		float right
		margin-right 25px
	&:after
		content ''
		position absolute
		right 10px
		top 17px
		width 14px
		height 14px
		background url("../../img/me/content_list_right_icon@2x.png") no-repeat
		background-size 50%
.setting_on_2
	margin-top 25px
	text-align center
.wipe
	position absolute
	top 0px
	left 0px
	width 100%
	height 100%
	background rgba(50,50,50,0.5)
	display none
	z-index 2
	.wipe_sm
		position absolute
		top 35%
		left 15%
		width 70%
		height 107px
		border-radius 10px
		background #FFF
		text-align center
		.wipe_sm_p
			font-size 12px
			width 100%
			height 63px
			line-height 63px
			border-bottom 1px solid #d6d7dc
			display inline-block
			color #494949
		.cancel
			width 50%
			height 43px
			text-align center
			line-height 44px
			display inline-block
			float left
			color #727272
		.confirm
			width 49%
			color #EA5404
			border-left 1px solid #d6d7dc
			
		