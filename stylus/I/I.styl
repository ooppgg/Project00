@import "../homepage/bottom.styl"
body
	background #EFEFF4
	margin 0
	padding 0
	font-family "微软雅黑"
	color #323232
.clear
	clear both
.i_head
	width 100%
	height 40px
	line-height 40px
	background white
	text-align center
	position relative
	border-bottom 1px solid #d6d7dc	
	img
		width 18px
		height 18px
		float right 
		margin-right 10px
		margin-top 11px
.user
	margin-top 20px
	width 100%
	height 96px
	background #FFF
	position relative
	&:before
		content ''
		position absolute
		top 15px
		left 15px
		width 66px
		height 66px
		border-radius 50%
		overflow hidden
		background url("../../img/me/log in_user-head@2x.png")
		background-size cover
	.user_click
		margin-left 90px
		display inline-block
		line-height 96px
	&:after
		content ''
		position absolute
		top 50%
		margin-top -9px
		right 10px
		width 18px
		height 18px
		background url("../../img/me/log in_right_icon@2x.png") no-repeat
		background-size 50%
		cursor pointer
.i_cen
	width 100%
	height 44px
	border-top 1px solid #d6d7dc
	border-bottom 1px solid #d6d7dc
	background #FFF
	.cen_wor
		float left
		width 50%
		text-align center
		line-height 44px
		position relative
		&:after
			position absolute
			content ''
			top 5px
			right 0px
			width 1px
			height 31px
			border-right 1px solid #d6d7dc
	.cen_wor_2
		float left
		width 50%
		text-align center
		line-height 44px
		position relative
.wor_num
	font-size 18px
	font-weight bold
	display inline-block
	margin-right 5px
.wor_word
	color #646464
	font-size 14px
.lis_i
	width 100%
	height 54px
	background #FFF
	border-bottom 1px solid #d6d7dc
	margin-top 15px	
	line-height 54px
	padding 0px 15px 0px 15px
	position relative
	box-sizing border-box
	.lis_i_1
		background url("../../img/me/content_list_icon01@2x.png") no-repeat 	
		background-size 17%
		width 30%
		height 54px
		padding-left 25px
	.lis_i_2
		background url("../../img/me/content_list_icon02@2x.png") no-repeat 
		background-size 17%	
	.lis_i_3
		background url("../../img/me/content_list_icon03@2x.png") no-repeat
		background-size 23%
	.lis_i_4
		background url("../../img/me/content_list_icon04@2x.png") no-repeat
		background-size 23%
	&:after
		position absolute
		content ''
		top 50%
		margin-top -7px
		right 10px
		width 14px
		height 14px
		background url("../../img/me/content_list_right_icon@2x.png") no-repeat
		background-size 50%
.footer
	.footer_wor_1
		background url("../../img/footer_nav/bottom_nor_icon04@2x.png") no-repeat center 5px
		background-size 24px 24px
	.footer_wor_4
		background url("../../img/footer_nav/bottom_press_icon01@2x.png") no-repeat center 5px
		background-size 24px 24px	
			
			
		